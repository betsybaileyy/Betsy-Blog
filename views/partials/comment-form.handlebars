<form action="/posts/comments" method="post">
<!-- <form action="#" id="new-comment"> -->
  <input type="hidden" class="form-control" value="{{post._id}}" name="postId">
  <fieldset>
    <legend>Add a Comment</legend>

    <div class="form-group">
      <label for="comment-title">Title</label><br>
      <input class="form-control"
        id="comment-title"
        type="text"
        name="title"
        placeholder="Title"/>
    </div>

    <div class="form-group">
      <label for="comment-content">Comment</label><br>
      <textarea class="form-control"
      id="comment-content"
      name="content"
      rows="10"
      placeholder="Your comment..."/></textarea>
    </div>


  <!-- <input class="form-control" type="hidden" value="{{post.id}}" name="postId"> -->
  </fieldset>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">Save Comment</button>
  </div>
</form>
